<script>
  const logo = document.querySelector(".logo") as HTMLElement;
  if (logo) {
    logo.addEventListener("mouseenter", () => {
      const hue = Math.floor(Math.random() * 360);
      logo.style.setProperty("--logo-fill", `oklch(0.7 0.153 ${hue})`);
    });
  }
</script>
<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 2rem;
  }
  .logo svg {
    display: block;
    width: clamp(2.8rem, 5vw, 3.75rem); /* 32px to 60px */
    height: auto;
  }
  .logo path {
    fill: var(--logo-fill, var(--text-primary));
  }
</style>
