---
interface Props {
	title?: string;
	backgroundColor?: string;
}

import Footer from "../components/Footer.astro";

const { title = "Astro Basics", backgroundColor } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght,SOFT,WONK@0,9..144,100..900,0..100,0..1&family=Inter:wght@400;500;600&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body style={backgroundColor ? `background-color: ${backgroundColor}` : ""}>
		<div class="layout-wrapper">
			<slot />
			<Footer />
		</div>
	</body>
</html>

<script>
	import "../styles/global.css";
</script>

<script is:inline>
	// Random color effect for links on hover
	document.querySelectorAll("a").forEach((link) => {
		link.addEventListener("mouseenter", () => {
			const hue = Math.floor(Math.random() * 360);
			link.style.setProperty(
				"--link-hover-color",
				`oklch(0.7 0.153 ${hue})`,
			);
		});
		link.addEventListener("mouseleave", () => {
			link.style.removeProperty("--link-hover-color");
		});
	});
</script>
