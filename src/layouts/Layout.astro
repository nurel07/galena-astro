---
interface Props {
	title?: string;
	backgroundColor?: string;
	footerSpan?: string;
}

import Footer from "../components/Footer.astro";

const { title = "Astro Basics", backgroundColor, footerSpan } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script
			type="text/partytown"
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-839SVQD1GV"
		></script>
		<script type="text/partytown">
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-839SVQD1GV");
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Open Graph / Social -->
		<meta property="og:title" content={title} />
		<meta property="og:type" content="website" />
		<meta
			property="og:image"
			content="https://assets.yevgenglukhov.com/images/basalt-og-image.jpg"
		/>
		<meta property="og:url" content="https://basalt.yevgenglukhov.com" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:image"
			content="https://assets.yevgenglukhov.com/images/basalt-og-image.jpg"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght,SOFT,WONK@0,9..144,100..900,0..100,0..1&family=Inter:wght@400;500;600&display=swap"
			rel="stylesheet"
		/>
		<script is:inline>
			// Immediate theme application to prevent FOUC
			const theme = (() => {
				if (
					typeof localStorage !== "undefined" &&
					localStorage.getItem("theme")
				) {
					return localStorage.getItem("theme");
				}
				if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
					return "dark";
				}
				return "light";
			})();
			document.documentElement.setAttribute("data-theme", theme);
		</script>
	</head>
	<body style={backgroundColor ? `background-color: ${backgroundColor}` : ""}>
		<div class="layout-wrapper">
			<slot />
			<Footer span={footerSpan} />
		</div>
	</body>
</html>

<script>
	import "../styles/global.css";
</script>

<script is:inline>
	// Random color effect for links on hover
	document.querySelectorAll("a").forEach((link) => {
		link.addEventListener("mouseenter", () => {
			const hue = Math.floor(Math.random() * 360);
			link.style.setProperty(
				"--link-hover-color",
				`oklch(0.7 0.153 ${hue})`,
			);
		});
		link.addEventListener("mouseleave", () => {
			link.style.removeProperty("--link-hover-color");
		});
	});
</script>

<script is:inline>
	// Google Analytics event tracking for elements with data-ga-event attribute
	document.querySelectorAll("[data-ga-event]").forEach((el) => {
		el.addEventListener("click", () => {
			const eventName = el.getAttribute("data-ga-event");
			if (typeof gtag === "function" && eventName) {
				gtag("event", eventName, {
					event_category: "engagement",
					event_label: el.textContent?.trim() || eventName,
				});
			}
		});
	});
</script>
